{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "mpicc build Lab 4",
      "type": "shell",
      "command": "mpicxx",
      "args": ["-g", "Code/main.cpp", "-o", "Code/main"],
      "options": {
